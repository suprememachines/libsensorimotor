src_files = [ 'common/log_messages.cpp'
            , 'common/modules.cpp'
            , 'serial/rs232.c'
            , 'motorhandler.cpp' ]

# common flags
cppflags = ['-O2', '-Wall', '-Wextra', '-Wno-psabi']

# c++ only flags
cxxflags = ['-std=c++11']



SharedLibrary('../bin/libsensorimotor', source = src_files, CPPFLAGS=cppflags, CXXFLAGS=cxxflags)
